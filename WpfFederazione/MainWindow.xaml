<Window x:Class="WpfFederazione.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfFederazione"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="LogIn" Content="Effetua l'accesso alla federazione" Margin="212,31,212,360" FontSize="20" HorizontalContentAlignment="Center" BorderThickness="1,1,1,1" Background="{x:Null}" Foreground="Black"/>
        <Label x:Name="lbl1" Content="Nome" Margin="345,79,345,320" FontSize="18" HorizontalContentAlignment="Center" BorderThickness="2,2,2,2" Background="{x:Null}"/>
        <TextBox x:Name="TxtNome" HorizontalAlignment="Center" Margin="0,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="171" Height="35" TextAlignment="Center" FontSize="18"/>
        <Label x:Name="lbl2" Content="Password" Margin="345,159,345,240" FontSize="18" HorizontalContentAlignment="Center" BorderThickness="2,2,2,2" Background="{x:Null}"/>
        <PasswordBox x:Name="pwb" HorizontalAlignment="Center" VerticalAlignment="Center" Width="171" Height="35"/>
        <Button x:Name="btn_LogIn" Content="Log In" HorizontalAlignment="Center" Height="43" Margin="0,261,0,0" VerticalAlignment="Top" Width="110" Foreground="White" FontSize="20" FontWeight="Bold" Background="#FF71D223" BorderBrush="#FF41C114" Click="btn_LogIn_Click"/>
    </Grid>
</Window>
